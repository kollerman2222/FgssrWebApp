@page "/account/profile"
@model IndexModel
@{
    ViewData["Title"] = "Profile";
}


<style>
    .direction{
        direction: rtl;
    }

    .bigtext {
        font-size: 25px !important;
    }

    .myspan {
        position: absolute;
        top: -0.5px; /* Adjust as needed */
        right: 73%; /* Center the icon horizontally */
        transform: translateX(50%); /* Center the icon horizontally */
        font-size: 20px;
        color: yellow;
        animation: shake 0.3s infinite;
    }

    @@keyframes shake {
    0% { transform: translateX(50%) rotate(0deg); }
    25% { transform: translateX(45%) rotate(-10deg); }
    50% { transform: translateX(50%) rotate(0deg); }
    75% { transform: translateX(55%) rotate(10deg); }
    100% { transform: translateX(50%) rotate(0deg); }
}

    .hidenotify {
        display: none;
    }
   
</style>

<section>
    <div class="pro-cover">
    </div>
    <div class="pro-menu">
        <div class="container">
            <div class="col-md-9 col-md-offset-3 direction">
                <ul>
                    <li><a href="/account/profile">الحساب</a></li>
                    <li><a href="/account/email">الايميل</a></li>
                    <li><a href="/account/password">تغيير كلمة المرور</a></li>
                    <li><a href="/account/phonenumber">الموبيل</a></li>
                    <li><a href="/account/diplomastatus">حاله طلب التقديم</a></li>
                    <li><a href="/account/notify">الإشعارات</a><i class="myspan hidenotify fa fa-bell"></i></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="stu-db direction">
        <div class="container pg-inn">
          <form method="post" enctype="multipart/form-data">     

            <div class="col-md-3">
                <div class="pro-user">
                        @if(Model.Input.ProfileImage == null)
                        {
                            <img src="~/uploads/users/defaultuserimage.webp" alt="No Image" asp-append-version="true" >
                        }
                        else
                        {
                          <img src="~/uploads/users/@Model.Input.ProfileImage" alt="No Image" width="245" height="245" asp-append-version="true" >
                        }

                </div>
                <div class="pro-user-bio">
                    <ul>
                        <li>
                            <h4>@Model.Input.FullNameArabic</h4>
                        </li>
                            @if(Model.Input.StudentNumber != null)
                            {
                               <li>رقم الطالب: @Model.Input.StudentNumber</li>

                            }
                            <input hidden asp-for="@Model.Input.ProfileImage"/>
                            <input class="remove" disabled type="file" asp-for="@Model.Input.EditProfileImage" value="Upload profile pic" />
                        
                    </ul>
                </div>
            </div>
            <div class="col-md-9">
                <div class="udb">

                    <div class="udb-sec udb-prof">
                            <h4 class="bigtext"><img src="~/images/db1.webp" alt="" asp-append-version="true" /> الحساب الشخصي</h4>
                      
                        <div class="sdb-tabl-com sdb-pro-table">
                          
                            <table class="responsive-table bordered">
                                <tbody>
                                    <tr>
                                            <td>اسم المستخدم</td>
                                        <td>:</td>
                                            <td>@Model.Input.Username</td>
                                    </tr>
                                    <tr>
                                            <td>الاسم الكامل بالانجليزي</td>
                                        <td>:</td>
                                            <td><input class="inputtext remove" disabled asp-for="Input.FullNameEnglish" /></td>
                                    </tr>
                                    <tr>
                                            <td> الاسم الكامل بالعربي </td>
                                        <td>:</td>
                                            <td><input class="inputtext remove" disabled asp-for="Input.FullNameArabic" /></td>
                                    </tr>
                                        @if(Model.Input.StudentNumber != null)
                                        {
                                              <tr>
                                                <td>رقم الطالب</td>
                                                <td>:</td>
                                                <td>@Model.Input.StudentNumber</td>
                                            </tr>
                                        }
                                      
                                    <tr>
                                        <td>الايميل</td>
                                        <td>:</td>
                                            <td><input class="inputtext" disabled asp-for="Input.CurrentEmail" /></td>
                                    </tr>
                                    <tr>
                                        <td>الموبيل</td>
                                        <td>:</td>
                                            <td><input class="inputtext" disabled asp-for="Input.PhoneNumber" type="number" /></td>
                                    </tr>
                                        <tr>
                                            <td>الرقم القومي</td>
                                            <td>:</td>
                                            <td><input class="inputtext remove" disabled asp-for="Input.NationalId" type="number" /></td>
                                        </tr>
                                    <tr>
                                        <td>تاريخ الميلاد</td>
                                        <td>:</td>
                                            <td><input class="inputtext remove" disabled type="date" asp-for="Input.BirthDate" /></td>
                                    </tr>
                                    <tr>
                                        <td>العنوان</td>
                                        <td>:</td>
                                            <td><input class="inputtext remove" disabled asp-for="Input.Address" /></td>
                                    </tr>
                                </tbody>
                            </table>
                            <div class="sdb-bot-edit">
                                    <a class="waves-effect waves-light btn-large sdb-btn2 ml-5" onclick="RemoveDisabled()"><i class="fa fa-pencil"></i> القيام بتعديلات</a>

                                    <button type="submit" disabled class="waves-effect waves-light btn-large sdb-btn ml-5 remove"><i class="fa fa-pencil"></i>حفظ التعديلات</button>
                            </div>
                        
                        </div>
                    </div>
                </div>
            </div>
            </form>
        </div>
    </div>
</section>

    <script>
    function RemoveDisabled() {
        $('.remove').removeAttr('disabled');
    }


    </script>













@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
