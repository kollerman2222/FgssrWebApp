@page "/account/register"
@model RegisterModel
@{
	ViewData["Title"] = "Register";
	Layout = "";
}

<!DOCTYPE html>
<html lang="en">
<head>
	<title>Register</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link href="~/authforms/fonts/iconic/css/material-design-iconic-font.min.css" rel="stylesheet" />
	<link rel="shortcut icon" href="~/images/fgssricon.webp" type="image/x-icon">
	<link href="~/template/cssRTL/mainRTL.css" rel="stylesheet" />
	<link href="~/authforms/css/util.css" rel="stylesheet" />
	<style>
		.paddingtop {
			padding-top: 60px !important;
		}


		.logo {
			width: 70%;
			height: 40%;
		}

		.fontsize {
			font-family: Poppins-Regular;
			font-size: 19px !important;
			line-height: 1.5;
			color: #333333;
			text-transform: uppercase;
		}

		.textred {
			color: red;
		}

		.wrap-register100{
			width: 600px;
			background: #fff;
			border-radius: 10px;
			overflow: hidden;
		}
		
	</style>
</head>
<body>


	<div class="limiter">
		<div class="container-login100 brightness-adjusted-image" style="background-image: url('@Url.Content("~/images/image.webp")');">
			<div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-54">
				<form class="login100-form" method="post">
					@* add return url same as register*@
					<span class="login100-form-title p-b-49">
						<img class="logo" src="~/images/fgssrlogo.webp" asp-append-version="true" />
					</span>
					<div asp-validation-summary="ModelOnly" class="text-danger textred" role="alert"></div>

					<div class="wrap-input100  m-b-23">
						<span class="label-input100">الاسم الكامل بالانجليزي</span>
						<input asp-for="Input.FullNameEnglish" class="input100" aria-required="true" />
						<span class="focus-input100" data-symbol="&#x1F464"></span>
						<span asp-validation-for="Input.FullNameEnglish" class="textred"></span>
					</div>
					<div class="wrap-input100">
						<span class="label-input100">الاسم الكامل بالعربي</span>
						<input asp-for="Input.FullNameArabic" class="input100" aria-required="true" />
						<span asp-validation-for="Input.FullNameArabic" class="textred"></span>
						<span class="focus-input100" data-symbol="&#x1F464"></span>
					</div>

					<div class="wrap-input100  m-b-23">
						<span class="label-input100">الايميل</span>
						<input asp-for="Input.Email" class="input100" autocomplete="username" aria-required="true" placeholder="name@example.com" />
						<span class="focus-input100" data-symbol="&#128231;"></span>
						<span asp-validation-for="Input.Email" class="textred"></span>
					</div>
					<div class="wrap-input100  m-b-23">
						<span class="label-input100">الرقم القومي</span>
						<input asp-for="Input.NationalId" class="input100"aria-required="true"/>
						<span class="focus-input100"></span>
						<span asp-validation-for="Input.NationalId" class="textred"></span>
					</div>
					<div class="wrap-input100">
						<span class="label-input100">الموبيل</span>
						<input type="number" asp-for="Input.PhoneNumber" class="input100" aria-required="true" />
						<span asp-validation-for="Input.PhoneNumber" class="textred"></span>
						<span class="focus-input100" data-symbol="&#9742;"></span>
					</div>
					<div class="wrap-input100">
						<span class="label-input100">العنوان</span>
						<input asp-for="Input.Address" class="input100" aria-required="true" />
						<span asp-validation-for="Input.Address" class="textred"></span>
						<span class="focus-input100" data-symbol="&#127968;"></span>
					</div>
					<div class="wrap-input100">
						<span class="label-input100">النوع</span>
						<select asp-for="Input.Gender" class="input100">
							<option value="">-- أختر النوع --</option>
							<option>ذكر</option>
							<option>أنثي</option>
						</select>
						<span asp-validation-for="Input.Gender" class="textred"></span>
						<span class="focus-input100" data-symbol="&#9899;"></span>
					</div>
					<div class="wrap-input100">
						<span class="label-input100">تاريخ الميلاد</span>
						<input type="date" asp-for="Input.BirthDate" class="input100" aria-required="true" />
						<span asp-validation-for="Input.BirthDate" class="textred"></span>
						<span class="focus-input100" data-symbol="&#128197;"></span>
					</div>
					<div class="wrap-input100">
						<span class="label-input100">كلمة المرور</span>
						<input asp-for="Input.Password" class="input100" aria-required="true" />
						<span asp-validation-for="Input.Password" class="textred"></span>
						<span class="focus-input100" data-symbol="&#x1F512;"></span>
					</div>
					<div class="wrap-input100">
						<span class="label-input100">تاكيد كلمة المرور</span>
						<input asp-for="Input.ConfirmPassword" class="input100" aria-required="true" />
						<span asp-validation-for="Input.ConfirmPassword" class="textred"></span>
						<span class="focus-input100" data-symbol="&#x1F512;"></span>
					</div>

					<div class="text-right p-t-8 p-b-31">
						<a>

						</a>
					</div>

					<div class="container-login100-form-btn">
						<div class="wrap-login100-form-btn">
							<div class="login100-form-bgbtn"></div>
							<button type="submit" class="login100-form-btn">
								إنشاء حساب
							</button>
						</div>
					</div>
					<div class="flex-col-c paddingtop">
						<span class="txt1 p-b-17">
							هل لديك حساب ؟
						</span>

						<a href="/account/login" class="fontsize">
							تسجيل دخول
						</a>
					</div>
				</form>
			</div>
		</div>
	</div>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>


