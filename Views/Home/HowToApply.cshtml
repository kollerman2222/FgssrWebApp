<style>
    .bigdive {
        display: flex;
        justify-content: center;
        margin-bottom: 8%;
        margin-top: 6%;
    }

        .bigdive a {
            display: block; /* Make anchor tags block-level */
            text-decoration: none; /* Remove default underline */
        }

        .bigdive img {
            width: 90%;
            max-width: 600px;
            height: auto;
            transition: transform 0.2s;
        }

            .bigdive img:hover {
                transform: scale(1.05);
            }

    .imageleft {
        margin-right: 2%;
    }

    .imageright {
        margin-left: 2%;
    }

    .text{
        font-size:40px;
        font-weight:600;
        color:black;
        padding-top:70px;
        padding-right:50px;

    }

    .hideboth{
        display:none;
    }

</style>

