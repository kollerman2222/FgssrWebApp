@model SubjectsViewModel

@{
    ViewData["Title"] = "Edit Subject";
    Layout = "_DashboardLayout";

}


<style>
    select{

        font-size:18px !important;
    }
</style>

<h1>Edit</h1>

<div class="sb2-2-3">
    <div class="row">
        <div class="col-md-12">
            <div class="box-inn-sp admin-form">
                <div class="inn-title">
                    <h4>تعديل القرر الدراسي</h4>
                </div>
                <div class="tab-inn">
                    <form class="form" method="post" asp-action="Edit">
                        <input hidden asp-for="SubjectId" />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="row">
                            <div class="col s6">
                                <div class="input-field">
                                    <span class="textsizespan">اسم المقرر عربي</span>
                                    <input asp-for="SubjectNameArabic" type="text">
                                    <span asp-validation-for="SubjectNameArabic" class="validationcolor"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col s6">
                                <div class="input-field">
                                    <span class="textsizespan">اسم المقرر انجليزي</span>
                                    <input asp-for="SubjectNameEnglish" type="text">
                                    <span asp-validation-for="SubjectNameEnglish" class="validationcolor"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col s6">
                                <div class="input-field">
                                    <span class="textsizespan">كود المقرر</span>
                                    <input asp-for="SubjectCode" type="text">
                                    <span asp-validation-for="SubjectCode" class="validationcolor"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col s6">
                                <div class="input-field">
                                    <span class="textsizespan">البرنامج الدراسي</span>
                                    <select asp-for="SectionId" asp-items="ViewBag.SectionsList" class="browser-default dropppsize">
                                        <option value="">--أختر البرنامج الدراسي--</option>
                                    </select>
                                    <span asp-validation-for="SectionId" class="validationcolor"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col s6">
                                <div class="input-field">
                                    <span class="textsizespan">الدرجه العلميه</span>
                                    <select class="browser-default" asp-for="ScientificDegree">
                                        <option value="" disabled >--أختر الدرجه العلميه--</option>
                                        <option value="Diploma">Diploma</option>
                                        <option value="Masters">Masters</option>
                                        <option value="Doctors">Doctors</option>
                                    </select>
                                    <span asp-validation-for="ScientificDegree" class="validationcolor"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12">
                                <i class="waves-effect waves-light btn-large waves-input-wrapper"><input type="submit" class="waves-button-input EditSubmitbutton" value="حفظ التعديلات"></i>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
