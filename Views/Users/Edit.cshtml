@model UsersViewModel

@{
    ViewData["Title"] = "Users";
    Layout = "_DashboardLayout";

}


<div class="sb2-2-3">
    <div class="row">
        <div class="col-md-12">
            <div class="box-inn-sp admin-form">
                <div class="inn-title">
                    <h4>تعديل صلاحيه المستخدم</h4>
                </div>
                <div class="tab-inn">
                    <form method="post" asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input hidden asp-for="UserId" />
                        <div class="row">
                            <div class="col s6">
                                <div class="input-field">
                                    <span class="textsizespan">الاسم</span>
                                    <input disabled asp-for="FullNameArabic" type="text">
                                    <span asp-validation-for="FullNameArabic" class="validationcolor"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s6">
                                <span class="textsizespan">الموبيل</span>
                                <input disabled asp-for="PhoneNumber" type="number">
                                <span asp-validation-for="PhoneNumber" class="validationcolor"></span>
                            </div>
                        </div>
                        @for (int i = 0; i < Model.Roles.Count; i++)
                        {
                            <div class="form-check m-1">
                                <input type="hidden" asp-for="@Model.Roles[i].RoleName" />
                                <input type="checkbox" asp-for="@Model.Roles[i].IsSelected" />
                                <label class="form-check-label directionn" asp-for="@Model.Roles[i].IsSelected">
                                    @Model.Roles[i].RoleName
                                </label>
                            </div>

                        }

                        <input type="checkbox" name="test" value="adadadadad"/>

                        <div class="row">
                            <div class="input-field col s12">
                                <input type="checkbox" name="test" value="adadadadad" />

                                <i class="waves-effect waves-light btn-large waves-input-wrapper"><input type="submit" class="waves-button-input" value="حفظ التعديلات"></i>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}