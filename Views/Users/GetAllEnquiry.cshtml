@model AdmissionViewModel

@{
    Layout = "_DashboardLayout";
}


<div class="sb2-2-3">
    <div class="row">
        <div class="col-md-12">
            <div class="box-inn-sp">
                <div class="inn-title">
                    <h4>جميع طلبات التقديم</h4>
                </div>
                <div class="tab-inn">
                    <div class="table-responsive table-desi">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>رقم الطلب</th>
                                    <th>الصوره</th>
                                    <th>الاسم</th>
                                    <th>الموبيل</th>
                                    <th>الايميل</th>
                                    <th>تاريخ الميلاد</th>
                                    <th>الدبلومه</th>
                                    <th>حاله الطلب</th>

                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var user in Model.UsersList.Where(x => x.ApplicationStatus != null))
                                {
                                    <tr>
                                        <td>@user.AdmissionNumber</td>

                                        <td>
                                            @if (user.ProfileImage == null)
                                            {
                                                <span class="list-img"><img src="~/uploads/users/defaultuserimage.png" alt="" asp-append-version="true" ></span>

                                            }
                                            else
                                            {
                                                <span class="list-img"><img src="~/uploads/users/@user.ProfileImage" alt="" asp-append-version="true" ></span>

                                            }
                                        </td>
                                        <td>@user.FullNameEnglish</td>
                                        <td>@user.PhoneNumber</td>
                                        <td>@user.Email</td>
                                        <td>@user.BirthDate</td>
                                        <td>@user.Section?.SectionName</td>
                                        <td><span class="label label-success">@user.ApplicationStatus</span></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>