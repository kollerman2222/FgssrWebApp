@model IEnumerable<UsersViewModel>

@{
    ViewData["Title"] = "Users";
    Layout = "_DashboardLayout";

}


<div class="sb2-2-3">
    <div class="row">
        <div class="col-md-12">
            <div class="box-inn-sp">
                <div class="inn-title">
                    <h4>جميع المستخدمين</h4>
                </div>
                <div class="tab-inn">
                    <div class="table-responsive table-desi">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>الصوره</th>
                                    <th>الاسم</th>
                                    <th>الدبلومه</th>
                                    <th>الصلاحيه</th>
                                    <th>الموبيل</th>
                                    <th>حاله الطلب</th>
                                    <th>تعديل الصلاحيه</th>
                                    <th>حذف المستخدم</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @if(item.ProfileImage == null)
                                            {
                                              <span class="list-img"><img src="~/uploads/users/defaultuserimage.png" alt="" asp-append-version="true" ></span>

                                            }
                                            else
                                            {
                                              <span class="list-img"><img src="~/uploads/users/@item.ProfileImage" alt="" asp-append-version="true" ></span>

                                            }
                                        </td>
                                        <td>
                                            <a><span class="list-enq-name">@item.FullNameEnglish</span></a>
                                        </td>
                                        <td>@item.SectionName</td>
                                       <td>
                                            @foreach (var role in item.Roles)
                                            {
                                                @role.RoleName
                                            }
                                       </td>
                                        <td>@item.PhoneNumber</td> 
                                        <td>@item.ApplicationStatus</td>

                                        <td><a asp-action="Edit" asp-controller="Users" asp-route-UserId="@item.UserId" class="ad-st-view-edit">تعديل</a></td>
                                        <td><a asp-action="Delete" asp-controller="Users" asp-route-UserId="@item.UserId" class="ad-st-view-delete">حذف</a></td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>